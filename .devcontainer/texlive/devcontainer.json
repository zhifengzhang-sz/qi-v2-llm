{
  "name": "TeX Live Development Container",
  "dockerFile": "Dockerfile",
  // The workspace folder inside the container
  "workspaceFolder": "/home/${localEnv:LOCAL_USERNAME}/workspace",
  // Revert to using the environment variable from the host/ .env file
  "remoteUser": "${localEnv:LOCAL_USERNAME}", 
  "extensions": [
    "James-Yu.latex-workshop",
    "shd101wyy.markdown-preview-enhanced",
    "redhat.vscode-yaml",
    "ktiays.aicursor"
  ],
  "settings": {
    "latex-workshop.latex.autoBuild.run": "onFileChange",
    "latex-workshop.view.pdf.viewer": "tab"
  },
  "postCreateCommand": "tlmgr install scheme-full",
  
  // Add remote user configuration
  "updateRemoteUserUID": true
}