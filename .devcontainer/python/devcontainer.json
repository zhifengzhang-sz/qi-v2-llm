{
  "name": "Python Dev Environment",
  // Link to the main docker-compose file
  "dockerComposeFile": ["../docker-compose.yml"],
  // Specify which service this configuration is for
  "service": "python",
  // The workspace folder inside the container
  "workspaceFolder": "/home/${localEnv:LOCAL_USERNAME}/workspace",
  // Revert to using the environment variable from the host/ .env file
  "remoteUser": "${localEnv:LOCAL_USERNAME}", 
  // Allow VS Code to manage UID mapping if needed for volume mounts
  "updateRemoteUserUID": true,

  // Environment variables that will be set for all commands
  "containerEnv": {
    "USER_HOME": "/home/${localEnv:LOCAL_USERNAME}",
    "USER_WORKSPACE": "/home/${localEnv:LOCAL_USERNAME}/workspace"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.debugpy",
        "charliermarsh.ruff" // Added Ruff for linting/formatting
      ],
      "settings": {
        // Point to the Python interpreter inside the virtual environment
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/bin/zsh"
          }
        }
      }
    }
  }
}