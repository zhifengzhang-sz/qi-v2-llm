{
  "name": "TypeScript Development Container",
  "dockerFile": "Dockerfile",
  "context": "..",
  // The workspace folder inside the container
  "workspaceFolder": "/home/${localEnv:LOCAL_USERNAME}/workspace",
  // Revert to using the environment variable from the host/ .env file
  "remoteUser": "${localEnv:LOCAL_USERNAME}", 
  "extensions": [
    "ms-vscode.vscode-typescript-tslint-plugin",
    "esbenp.prettier-vscode",
    "shd101wyy.markdown-preview-enhanced",
    "redhat.vscode-yaml",
    "ktiays.aicursor"
  ],
  "settings": {
    "typescript.tsdk": "/usr/local/lib/node_modules/typescript/lib"
  },
  "postCreateCommand": "npm install",
  
  // Change this to match the dynamic configuration
  "updateRemoteUserUID": true
}